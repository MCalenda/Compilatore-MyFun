proc sub(int op1,op2) int:
    int result := 0;

    if op1 > op2 then
        result := op1 - op2;
    else
        result := op2 - op2;
    fi;

    ->result
corp;

proc mult(int op1,op2) int:
    -> op1 * op2
corp;

proc divi(int op1,op2)int:
    int result := 0;

    if op1 > op2 then
        result := op1 / op2;
    else
        result := op2 / op1;
    fi;

    -> result
corp;

