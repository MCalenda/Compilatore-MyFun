int n := 0;
    
proc factorial(int n)int:
    int result := 0;
    float x := 1.0;

    if n = 0 then
	    result := 1;
	elif n = 0 then
	    result := 3;
    else
	    result := n * factorial(n - 1);
    fi;

    -> result
